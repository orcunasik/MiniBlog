@model IEnumerable<MiniBlog.Entities.Concretes.Blog>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Blogs";
}
<div class="col-md-12 mt-1">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Bloglar </h3>
            <span class="float-right"><a href="/AdminBlogs/Save/" class="btn btn-success"> + Blog Oluştur</a></span>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 20%">Blog</th>
                        <th style="width: 10%">Yazar</th>
                        <th style="width: 10%">Kategori</th>
                        <th style="width: 5%" class="text-center">Durumu</th>
                        <th style="width: 30%"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var blog in Model)
                        {
                            <tr>
                                <td scope="row">@i</td>
                                <td>@blog.Title</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a href="/AdminAuthors/AuthorBlogs/@blog.Id"><img alt="Avatar" class="table-avatar" src="@blog.Author.Image"></a>
                                        </li>
                                    </ul>
                                </td>
                                <td>@blog.Category.Name</td>
                                <td class="project-state">
                                    @if (blog.IsActive == true)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/AdminComments/BlogComments/@blog.Id">
                                        <i class="fas fa-comment"></i>
                                        Yorumlar
                                    </a>
                                    <a class="btn btn-primary btn-sm" href="/AdminBlogs/BlogDetail/@blog.Id">
                                        <i class="fas fa-book"></i>
                                        Detaylar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/AdminBlogs/Update/@blog.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                        Düzenle
                                    </a>
                                    @if (blog.IsActive == true)
                                    {
                                        <a class="btn btn-danger btn-sm" href="/AdminBlogs/Update/@blog.Id">
                                            <i class="fas fa-eraser"></i>
                                            Kaldır
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-warning btn-sm" href="/AdminBlogs/Update/@blog.Id">
                                            <i class="fas fa-broadcast-tower"></i>
                                            Yayımla
                                        </a>
                                    }

                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

