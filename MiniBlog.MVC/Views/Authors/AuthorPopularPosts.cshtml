@model IEnumerable<MiniBlog.Entities.Concretes.Blog>
<div class="sidebar-box">
    <h3 class="heading">Yazarın Diğer Postları</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var authorPost in Model)
            {
                <li>
                    <a href="/Blogs/BlogDetails/@authorPost.Id">
                        <img src="@authorPost.Image" alt="Image placeholder" class="mr-4">
                        <div class="text">
                            <h4>@authorPost.Title</h4>
                            <div class="post-meta">
                                <span class="mr-2">@authorPost.Date.ToString("MMMM dd, yyyy") </span>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
