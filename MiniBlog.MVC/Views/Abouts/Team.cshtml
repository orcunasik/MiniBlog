@model IEnumerable<MiniBlog.Entities.Concretes.Author>
<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Ekibimizi Tanıyalım</h2>
                <p>Sizlere Birbirinden Güzel İçerikler Sunan Muhteşem Çalışma Arkadaşlarımız</p>
            </div>
        </div>
        <div class="row">
            @foreach (var team in Model)
            {
                <div class="col-md-6 col-lg-4 mb-5 text-center">
                    <img src="@team.Image" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                    <h2 class="mb-3 h5">@team.Name</h2>
                    <p>@team.About</p>

                    <p class="mt-5">
                        <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                        <a href="#" class="p-3"><span class="icon-instagram"></span></a>
                        <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
