@using MiniBlog.Business.Helpers
@model IEnumerable<MiniBlog.Entities.Concretes.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="col-md-12 mt-3">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Bloglarım</h3>
            <span class="float-right"><a href="/AuthorBlogs/Save/" class="btn btn-success"> + Blog Oluştur</a></span>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 20%">Başlık</th>
                        <th style="width: 25%">İçerik</th>
                        <th>Blog Puanı</th>
                        <th style="width: 8%" class="text-center">Durumu</th>
                        <th style="width: 25%" valign="middle">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var blog in Model)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>
                                    <a>@blog.Title</a>
                                    <br />
                                    <small>@blog.Date.ToString("MMMM dd yyyy")</small>
                                </td>
                                <td>@blog.Content.CharacterDelimiter(35)</td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@blog.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width: @blog.BlogRating%">
                                        </div>
                                    </div>
                                    <small>
                                        @blog.BlogRating% Oranında Beğenildi
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/AuthorBlogs/BlogDetail/@blog.Id">
                                        <i class="fas fa-folder"></i>
                                        BlogDetay
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/AuthorBlogs/Update/@blog.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/AuthorBlogs/Update/@blog.Id">
                                        <i class="fas fa-trash"></i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
