@{
    ViewBag.Title = "BlogDetails";
}
@Html.Action("BlogCover", "Blogs")
<section class="site-section py-lg">
    <div class="container">
        <div class="row blog-entries element-animate">
            <div class="col-md-12 col-lg-8 main-content">
                @Html.Action("BlogReadMore", "Blogs")
                @Html.Action("CommentListByBlog", "Comments")
                
            </div>
            <div class="col-md-12 col-lg-4 sidebar">
                @Html.Action("AuthorAbout", "Authors")
                @Html.Action("AuthorPopularPosts", "Authors")
                @Html.Action("CategoryList", "Categories")
                @Html.Action("TagCloud", "Tags")
            </div>
        </div>
    </div>
</section>
@Html.Action("OtherFeaturedPosts", "Blogs")
@Html.Action("AddMail", "SubscribeMails")
@Html.Action("Footer", "Abouts")