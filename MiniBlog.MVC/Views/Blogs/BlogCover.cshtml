@model IEnumerable<MiniBlog.Entities.Concretes.Blog>
    @foreach (var blogCover in Model)
    {
    <div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@blogCover.Image');">
        <div class="container">
            <div class="row same-height justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="post-entry text-center">
                        <span class="post-category text-white bg-success mb-3">@blogCover.Category.Name</span>
                        <h1 class="mb-4"><a href="#">@blogCover.Title</a></h1>
                        <div class="post-meta align-items-center text-center">
                            <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="@blogCover.Author.Image" alt="Image" class="img-fluid"></figure>
                            <span class="d-inline-block mt-1">@blogCover.Author.Name</span>
                            <span>&nbsp;-&nbsp;@blogCover.Date.ToString("MMMM dd yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
