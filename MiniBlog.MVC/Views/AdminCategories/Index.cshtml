@model IEnumerable<MiniBlog.Entities.Concretes.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12 mt-3">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kategoriler</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 20%">Kategori</th>
                        <th style="width: 30%">Açıklamalar</th>
                        <th style="width: 8%" class="text-center">Durumu</th>
                        <th style="width: 20%">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var category in Model)
                        {
                            <tr>
                                <td scope="row">@i</td>
                                <td>
                                    <a>@category.Name</a>
                                    <br />
                                    <small>@category.CreatedDate.ToString("MMMM dd yyyy")</small>
                                </td>
                                <td>@category.Description</td>
                                <td class="project-state">
                                    <span class="badge badge-success">Success</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder"></i>
                                        Bloglar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt"></i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash"></i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>