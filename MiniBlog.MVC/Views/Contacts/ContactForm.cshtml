<div class="col-md-7 mb-5">



    <form action="#" class="p-5 bg-white">


        <div class="row form-group">
            <div class="col-md-6 mb-3 mb-md-0">
                <label class="text-black" for="fname">Adınız</label>
                <input type="text" id="fname" class="form-control">
            </div>
            <div class="col-md-6">
                <label class="text-black" for="lname">Soyadınız</label>
                <input type="text" id="lname" class="form-control">
            </div>
        </div>

        <div class="row form-group">

            <div class="col-md-12">
                <label class="text-black" for="email">Eposta Adresiniz</label>
                <input type="email" id="email" class="form-control">
            </div>
        </div>

        <div class="row form-group">

            <div class="col-md-12">
                <label class="text-black" for="subject">Konu</label>
                <input type="subject" id="subject" class="form-control">
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-12">
                <label class="text-black" for="message">Mesajınız</label>
                <textarea name="message" id="message" cols="30" rows="7" class="form-control" placeholder="Mesajınız Buraya Yazın"></textarea>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-12">
                <input type="submit" value="Göndere" class="btn btn-primary py-2 px-4 text-white">
            </div>
        </div>


    </form>
</div>
