@model MiniBlog.Entities.Concretes.Comment
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Bırakabilirsiniz</h3>
    <form action="/Comments/LeaveComment" method="post" class="p-5 bg-light">
        <input type="hidden" id="IsActive" name="IsActive" value="@true" />
        <input type="hidden" id="Date" name="Date" value="@DateTime.Now" />
        <input type="hidden" id="BlogId" name="BlogId" value="@ViewBag.entityId" />
        <div class="form-group">
            <label for="Name">Adınız</label>
            <input type="text" class="form-control" id="Name" name="Name" value="">
        </div>
        <div class="form-group">
            <label for="Mail">Eposta Adresiniz</label>
            <input type="email" class="form-control" id="Mail" name="Mail" value="">
        </div>
        <div class="form-group">
            <label for="Text">Yorumunuz</label>
            <textarea name="Text" id="Text" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorumu Gönder" class="btn btn-primary mb-3">
        </div>

    </form>
</div>
