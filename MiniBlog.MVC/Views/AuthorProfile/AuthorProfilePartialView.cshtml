@model IEnumerable<MiniBlog.Entities.Concretes.Author>
<div class=" active tab-pane" id="settings">
    @foreach (var author in Model)
    {
        <form class="form-horizontal" action="/AuthorProfile/ProfileUpdate" method="post">
            <input type="hidden" id="Id" name="Id" value="@author.Id" />
            <div class="form-group row">
                <label for="Name" class="col-sm-2 col-form-label">Ad Soyad</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="Name" name="Name" value="@author.Name" />
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-md-10">
                    <input type="email" class="form-control" name="Email" id="Email" placeholder="Email" value="@author.Email" />
                </div>
            </div>
            <div class="form-group row">
                <label for="Password" class="col-sm-2 col-form-label">Parola</label>
                <div class="col-md-10">
                    <input type="password" class="form-control" id="Password" name="Password" value="@author.Password" />
                </div>
            </div>
            <div class="form-group row">
                <label for="About" class="col-sm-2 col-form-label">Hakkımda</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="About" name="About" value="@author.About" />
                </div>
            </div>
            <div class="form-group row">
                <label for="Title" class="col-sm-2 col-form-label">Pozisyon</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="Title" name="Title" value="@author.Title" />
                </div>
            </div>
            <div class="form-group row">
                <label for="Image" class="col-sm-2 col-form-label">Profil Resmi</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="Image" name="Image" value="@author.Image" />
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-md-10">
                    <button type="submit" class="btn btn-danger">Güncelle</button>
                </div>
            </div>
        </form>
    }
</div>